{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "out-ngc",
    "sourceMap": false,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "es2015",
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es6",
      "dom"
    ]
  },
  "exclude": [
    "e2e",
    "dist",
    "node_modules",
    "src/test.ts",
    "**/*.spec.ts"
  ],
  "angularCompilerOptions": {
    "strictInjectionParameters": true,
    "preserveWhitespaces": true,
    "strictMetadataEmit": false,
    "skipMetadataEmit": false
  }
}
